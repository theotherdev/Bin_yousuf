    <title>IND Design Studio</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Poppins', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background-color: #ffffff;
        overflow-x: hidden;
        color: #333;
      }

      body, html {
        cursor: url('data:image/svg+xml;utf8,<svg width="16" height="16" xmlns="http://www.w3.org/2000/svg"><line x1="8" y1="3" x2="8" y2="13" stroke="black" stroke-width="2"/><line x1="3" y1="8" x2="13" y2="8" stroke="black" stroke-width="2"/></svg>') 8 8, crosshair;
      }

      /* Navigation Styles */
      .nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        z-index: 1000;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      }

      .nav-left,
      .nav-right {
        display: flex;
        gap: 30px;
      }

      .nav-link {
        text-decoration: none;
        color: #999;
        font-size: 14px;
        font-weight: 400;
        transition: color 0.3s ease;
        position: relative;
      }

      .nav-link.active {
        color: #000;
      }

      .nav-link:hover {
        color: #000;
      }

      /* Hero Section */
      .hero-section {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        position: relative;
        padding-left: 10vw;
      }

      /* Hero Text */
      .hero-text {
        font-size: clamp(40px, 7vw, 90px);
        font-weight: 500;
        color: #4c4c4c;
        letter-spacing: -0.02em;
        text-align: left;
        position: relative;
        z-index: 2;
      }

      .static-text {
        margin-right: 0.1em;
      }

      .animated-text {
        position: relative;
        display: inline-block;
        min-width: 1em;
        transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .animated-text.blur-out {
        filter: blur(10px);
        opacity: 0;
        transform: translateY(-20px);
      }

      .animated-text.blur-in {
        filter: blur(0px);
        opacity: 1;
        transform: translateY(0px);
      }

      /* Bottom Navigation */
      .bottom-nav {
        position: fixed;
        bottom: 40px;
        left: 40px;
        display: flex;
        gap: 40px;
        z-index: 10;
      }

      .bottom-link {
        text-decoration: none;
        color: #999;
        font-size: 14px;
        font-weight: 400;
        transition: color 0.3s ease;
      }

      .bottom-link:hover {
        color: #333;
      }

      .bottom-link sup {
        font-size: 10px;
        margin-left: 2px;
      }

      /* Projects Section */
      .projects-section {
        position: relative;
      }

      /* Main Container */
      .main-container {
        display: flex;
        margin-top: 80px;
        min-height: calc(100vh - 80px);
      }

      /* Sidebar */
      .sidebar {
        width: 400px;
        background: #fafafa;
        padding: 30px 20px;
        position: fixed;
        height: calc(100vh - 80px);
        overflow-y: auto;
        border-right: 1px solid #eee;
      }

      .favorites-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #ddd;
      }

      .section-title {
        font-size: 16px;
        font-weight: 600;
        color: #333;
      }

      .favorite-icon {
        font-size: 20px;
        color: #999;
        cursor: pointer;
        transition: color 0.3s ease;
      }

      .favorite-icon:hover {
        color: #333;
      }

      /* Projects List */
      .projects-list {
        space-y: 2px;
      }

      .project-item {
        display: flex;
        align-items: flex-start;
        padding: 15px 0;
        cursor: pointer;
        transition: all 0.3s ease;
        border-radius: 8px;
        position: relative;
      }

      .project-item:hover {
        background-color: rgba(0, 0, 0, 0.02);
        padding-left: 10px;
      }

      .project-item.active {
        background-color: rgba(0, 0, 0, 0.05);
        padding-left: 10px;
      }

      .project-number {
        font-size: 12px;
        color: #999;
        margin-right: 15px;
        font-weight: 500;
        min-width: 30px;
      }

      .project-info {
        flex: 1;
      }

      .project-name {
        font-size: 14px;
        font-weight: 500;
        color: #333;
        margin-bottom: 4px;
        line-height: 1.4;
      }

      .project-location {
        font-size: 12px;
        color: #999;
        line-height: 1.3;
      }

      /* Content Area */
      .content-area {
        margin-left: 400px;
        flex: 1;
        position: relative;
      }

      .project-display {
        height: 100vh;
        position: relative;
        opacity: 0;
        transform: translateY(50px);
        transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .project-display.active {
        opacity: 1;
        transform: translateY(0);
      }

      .project-display.visible {
        opacity: 1;
        transform: translateY(0);
      }

      .project-image {
        width: 100%;
        height: 100%;
        position: relative;
        overflow: hidden;
      }

      .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s ease;
      }

      .project-item:hover + .content-area .project-display.active .project-image img,
      .project-display:hover .project-image img {
        transform: scale(1.02);
      }

      /* Project Details */
      .project-details {
        position: absolute;
        bottom: 40px;
        left: 40px;
        z-index: 10;
      }

      .award-badge {
        display: flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 15px 20px;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        transform: translateY(20px);
        opacity: 0;
        animation: slideUp 0.8s ease forwards;
        animation-delay: 0.5s;
      }

      .award-icon {
