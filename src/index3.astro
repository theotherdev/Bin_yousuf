        margin-right: 15px;
      }

      .award-text strong {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #333;
        margin-bottom: 2px;
      }

      .award-category {
        font-size: 12px;
        color: #999;
      }

      @keyframes slideUp {
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      /* Responsive Design */
